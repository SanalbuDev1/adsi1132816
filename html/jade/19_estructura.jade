        margin: 0px auto;
      }
      a {
        color: #fff;
        border-bottom: 2px solid #b00;
        display: inline-block;
        margin-right: 30px;
        padding: 20px 60px;
        text-decoration: none;
        -webkit-transition: 0.4s all;
      }
      a:last-of-type {
        margin-right: 0px;
      }
      a:first-of-type {
        margin-left: 3px;
      }
      a:hover {
        background-color: #b00;
      }
      div.contenido,
      div.pie {
        padding: 20px;
      }
      div.contenido h1 {
        color: #b00;
        text-align: center;
        font-size: 1.2em;
      }
      div.contenido p {
      text-align: justify;
      line-height: 26px;
      }
      div.pie p {
        text-align: center;
      }
